rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files
    match /{allPaths=**} {
      allow read;
    }

    // Allow authenticated users to write to their own user folder
    match /users/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to write to customer logos folder
    match /customer_logos/{customerId}/{allPaths=**} {
        allow write: if request.auth != null;
    }
  }
}
