rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // General rule: By default, no one can read or write.
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Allow users to write to their own folder and read from it.
    match /users/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth.uid == userId;
    }
    
    // Allow authenticated users to upload customer logos. Anyone can read them.
    match /customer_logos/{customerId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null;
    }
  }
}
