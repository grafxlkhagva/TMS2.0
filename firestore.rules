rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check user role
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function isDriver() {
      return request.auth != null && getUserData().role == 'driver';
    }
    
    function isAdmin() {
      return request.auth != null && getUserData().role == 'admin';
    }
    
    // Shipments collection
    match /shipments/{shipmentId} {
      // Drivers can read only their assigned shipments
      allow read: if isDriver() && resource.data.driverId == request.auth.uid;
      // Drivers can update status of their shipments
      allow update: if isDriver() && 
                       resource.data.driverId == request.auth.uid &&
                       request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'updatedAt']);
      // Admins have full access
      allow read, write: if isAdmin();
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow write: if isAdmin();
    }

    // Default rule for other collections (strict for now)
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}
